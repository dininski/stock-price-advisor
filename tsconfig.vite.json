{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "frontend/**/*",
    "frontend/**/.server/**/*",
    "frontend/**/.client/**/*",
    "server/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client", "vitest/globals"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["frontend/*", "server/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
